{
  "version": 1,
  "canisters": {
    "backend": {
      "type": "rust",
      "package": "backend",
      "candid": "backend/backend.did"
    },
    "frontend": {
      "type": "assets",
      "source": [
        "frontend/dist"
      ],
      "dependencies": [
        "backend"
      ],
      "build": [
        "cd frontend && npm install && npm run build"
      ],
      "frontend": {
        "entrypoint": "frontend/dist/index.html"
      }
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "type": "ephemeral",
      "bind": "127.0.0.1:4943",
      "replica": {
        "subnet_type": "system"
      }
    },
    "ic": {
      "type": "persistent",
      "providers": [
        "https://ic0.app"
      ]
    }
  }
}
